<h1 class="title-page">Create Article</h1>
<div>
    <form action="/articles/create" method="post" enctype="multipart/form-data">
       
        <div class="form-input">
            <label class="form-label">Title</label>
            <br>
            <input class="form-control" type="text" name="title" required>
        </div>
        
        <div class="form-input">
            <label class="form-label">Age Range</label>
            <select name="ageRange" class="form-control" type="select">
                <option value="Pregnancy">Pregnancy</option>
                <option value="Birth-1Month">Birth-1 Month</option>
                <option value="2-6Months">2-6 Months</option>
                <option value="7-12Months">7-12 Months</option>
                <option value="13-18Months">13-18 Months</option>
                <option value="19-24Months">19-24 Months</option>
                </select>
        </div>

        <div class="form-input">
            <label class="form-label">Link</label>
            <br>
            <input type="text" name="link" class="form-control">
        </div>

        <div class="form-input">
            <label class="form-label">Upload Image</label>
            <input class="form-control" type="file" name="imageUrl" accept="image/png, image/jpg">
        </div>

        <div class="form-input">
            <label class="form-label">Content</label>
            <textarea class="form-control create-content" type="text" name="content" required placeholder="max 2000 characters"></textarea>
        </div>

        <button type="submit" class="submit-button">Create your article</button>
    </form>
</div>
