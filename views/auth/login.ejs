<h1>Log In</h1>
<form action="/auth/login" method="post">
    <label>Email adress:<input type="email" name="email" value="<% if (typeof errorMessage !== 'undefined') {%><%= data.email %><% } %>" required></label>
    <label>Password:<input type="password" name="password" required></label>
    <button type="submit">Log In</button>
</form>


<% if (typeof errorMessage !== 'undefined') { %>
    <p><%- errorMessage %></p>
    <% if (errorMessage === 'This email is not registered. Please go to the Register page') { %>
       <a href="/auth/register">Register</a>
    <% } %>
   <% } %>